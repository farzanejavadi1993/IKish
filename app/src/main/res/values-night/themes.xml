<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ikish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_gray</item>
        <item name="colorPrimaryDark">@color/pale_gray</item>

<!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/topaz</item>-->
        <!--<item name="colorSecondaryVariant">@color/topaz</item>-->
        <!--<item name="colorOnSecondary">@color/black</item>-->
        <item name="colorAccent">@color/topaz</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!-- Status bar color. -->
       <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/MySnackbar</item>
    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="DayOfMonthStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
        <item name="android:textColor">@color/default_date_color</item>
    </style>
</resources>