    <style parent="android:Widget.TextView" name="FontForWholeApp">

        <item name="android:fontFamily">@font/iransans</item>

    </style>


    <style name="DefaultNumberPickerTheme" parent="Theme.Ikish">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:fontFamily">@font/iransans</item>

    </style>

    <style name="WeekDayTitleStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:textSize">@dimen/text_size_week</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textColor">@color/weekDayNameColor</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
    </style>

    <style name="ContainerDayOfWeek">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="StripRange">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_centerVertical">true</item>
    </style>



    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_star</item>
        <item name="android:indeterminateDrawable">@drawable/ic_star</item>
    </style>


    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_top_rounded</item>
    </style>



</resources>