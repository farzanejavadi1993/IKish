<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="ikish.aftab.ws.android.model.EventModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:backgroundTint="@color/pale_gray">




        <RelativeLayout

            android:id="@+id/view_item"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            >
            <View
                android:layout_centerInParent="true"
                android:background="#c4c4c4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_circle"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"
                android:layout_width="6dp"
                android:layout_height="6dp"/>
        </RelativeLayout>

        <TextView
            android:text="@{event.day}"
            android:id="@+id/tv_day_event"
            android:layout_marginTop="32dp"
            style="@style/H8Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/view_item"
            tools:text="چهارشنبه" />
        <TextView
            android:id="@+id/tv_date_event"
            android:text="@{event.date}"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/view_item"
            android:layout_below="@+id/tv_day_event"
            style="@style/H3Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="۰۸"/>

        <LinearLayout
            android:background="@drawable/time_event_radus"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_day_event"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:text="@{event.title}"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="10sp"
                android:gravity="end"
                tools:text="شروع جشنواره بهاره کیش"/>

            <TextView
                android:text="@{event.description}"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="10sp"
                android:gravity="end"
                tools:text="از ۸ اردیبهشت تا ۱۵ اردیبهشت"/>




        </LinearLayout>


    </RelativeLayout>
</layout>