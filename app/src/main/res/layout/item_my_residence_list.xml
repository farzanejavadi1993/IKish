<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="MyResidence"
            type="ikish.aftab.ws.android.db.Residence" />
    </data>
    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:backgroundTint="@color/pale_gray"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:cardCornerRadius="12dp"

        app:strokeColor="#e3e3e3"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.siyamed.shapeimageview.RoundedImageView
                app:siBorderColor="#eee"
                app:siBorderWidth="0.5dp"
                android:id="@+id/iv_my_residence"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:siRadius="8dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_name_my_residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:lineSpacingExtra="9sp"
                android:textColor="#474747"
                android:textSize="13sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/iv_my_residence"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{MyResidence.NM}" />

            <TextView

                android:id="@+id/tv_status_my_residence"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/item_passenger_radus"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="در حال بررسی"

                android:textColor="#8a8a8a"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/iv_my_residence"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_my_residence" />

            <TextView
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:text="@{MyResidence.RAT}"
                android:id="@+id/tv_rate_my_residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_my_residence"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_my_residence" />

            <ImageView
               android:src="@drawable/ic_star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"

                app:layout_constraintEnd_toStartOf="@+id/tv_rate_my_residence"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_my_residence" />

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_my_residence" />

            <TextView

                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="end"
                android:text="@{MyResidence.ADD}"
                android:id="@+id/tv_address_my_residene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"

                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/iv_my_residence" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_menu"
                android:backgroundTint="@color/pale_gray"
                app:strokeWidth="1dp"
                app:strokeColor="#8a8a8a"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:text="Button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>