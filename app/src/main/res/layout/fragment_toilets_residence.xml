<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/pale_gray"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">




                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_back"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#474747"
                android:lineSpacingExtra="16sp"
                android:gravity="right"
                android:text="سرویس‌های بهداشتی اقامتگاه"
                android:id="@+id/tv_toilet_residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="14dp"
                android:id="@+id/layout_bathRoom"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_toilet_residence" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد حمام"
                    android:id="@+id/tv_bathRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_bathRoom"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_bathRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_bathRoom"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_iran_toilet"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_bathRoom" >

                <TextView
                    android:id="@+id/tv_iran_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:lineSpacingExtra="9sp"
                    android:text="توالت ایرانی"
                    android:textColor="#474747"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_iran_tiolet"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_iran_toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_iran_toilet"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_europe_toilet"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_iran_toilet" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="توالت فرنگی"
                    android:id="@+id/tv_amount_europe_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_europe_toilet"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_europe_toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_europe_toilet"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#474747"
                android:lineSpacingExtra="16sp"
                android:gravity="end"
                android:text="اقامتگاه از چه امکاناتی برخوردار است؟"
                android:layout_marginTop="30dp"
                android:id="@+id/tv_possibility_of_residence"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_europe_toilet" />


            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/more_posibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_possibility_of_residence">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/wifi1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_wifi" />

                    <TextView
                        style="@style/H6Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/wifi1"
                        android:text="@string/wifi" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        style="@style/H6Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/iv_countertops1"
                        android:text="@string/best_kitchen" />

                    <ImageView
                        android:id="@+id/iv_countertops1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_countertops" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        style="@style/H6Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/iv_microwave1"
                        android:text="@string/food" />

                    <ImageView
                        android:id="@+id/iv_microwave1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_microwave" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="74dp">

                    <TextView
                        style="@style/H6Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/tv_television1"
                        android:text="@string/Audio_service" />

                    <ImageView
                        android:id="@+id/tv_television1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_tv_24px" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:id="@+id/card_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/card_radius_bottom"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue_toilet"
                android:layout_width="132dp"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:backgroundTint="@color/very_light_pink"
                android:fontFamily="@font/iransans"
                android:lineSpacingExtra="10sp"
                android:text="@string/continue_add_residence"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold"

                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </RelativeLayout>

</layout>