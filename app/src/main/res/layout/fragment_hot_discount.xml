<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"

        android:background="@color/pale_gray"
        android:focusable="true"
        android:clickable="true"
        android:layout_height="match_parent"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/passenger_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:id="@+id/iv_back"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/ic_back"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginStart="22dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


      <com.github.siyamed.shapeimageview.RoundedImageView
          android:layout_width="match_parent"
          app:siRadius="12dp"
          android:src="@drawable/kishpasaj"
          android:layout_marginTop="13dp"
          app:siBorderColor="#eee"
          app:siBorderWidth="1dp"
          android:layout_marginLeft="22dp"
          android:layout_marginRight="22dp"
          android:layout_height="191dp"/>

        <RelativeLayout
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#474747"
                android:lineSpacingExtra="9sp"
                android:gravity="end"
                android:text="دسته بندی‌ها"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="#13b6ad"
                android:lineSpacingExtra="9sp"
                android:gravity="end"
                android:text="مشاهده همه"/>
        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="22dp">

            <ImageView
                android:id="@+id/item1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/kishgardi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:lineSpacingExtra="10sp"
                android:text="لباس زنانه"
                android:textColor="#474747"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/item1"
                app:layout_constraintStart_toStartOf="@+id/item1"
                app:layout_constraintTop_toBottomOf="@+id/item1" />

            <ImageView
                android:id="@+id/item2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="29dp"
                android:src="@drawable/roidadha"
                app:layout_constraintEnd_toStartOf="@+id/item1"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv2"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="لباس مردانه"
                app:layout_constraintEnd_toEndOf="@+id/item2"
                app:layout_constraintStart_toStartOf="@+id/item2"
                app:layout_constraintTop_toBottomOf="@+id/item2"  />



            <ImageView
                android:src="@drawable/takhfifha"
                android:id="@+id/item3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="29dp"
                app:layout_constraintEnd_toStartOf="@+id/item2"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="لوازم خانگی"
                app:layout_constraintEnd_toEndOf="@+id/item3"
                app:layout_constraintStart_toStartOf="@+id/item3"
                app:layout_constraintTop_toBottomOf="@+id/item3"  />


            <ImageView
                android:src="@drawable/khalafi"
                android:id="@+id/item4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="29dp"
                app:layout_constraintEnd_toStartOf="@+id/item3"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv4"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="کیش گردی"
                app:layout_constraintEnd_toEndOf="@+id/item4"
                app:layout_constraintStart_toStartOf="@+id/item4"
                app:layout_constraintTop_toBottomOf="@+id/item4"  />


            <ImageView
                android:src="@drawable/ejare_khodro"
                android:id="@+id/item5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="29dp"
                app:layout_constraintEnd_toStartOf="@+id/item4"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv5"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item1"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="مال"
                app:layout_constraintEnd_toEndOf="@+id/item5"
                app:layout_constraintStart_toStartOf="@+id/item5"
                app:layout_constraintTop_toBottomOf="@+id/item5"  />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#474747"
            android:lineSpacingExtra="9sp"
            android:gravity="right"
            tools:text="محبوب‌ترین تخفیف‌ها"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginRight="22dp"

            android:id="@+id/recycler_best_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#474747"
            android:lineSpacingExtra="9sp"
            android:gravity="right"
            tools:text="تخفیف‌های پیشنهادی"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginRight="22dp"
            android:layout_marginBottom="45dp"
            android:id="@+id/recycler_suggest_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>