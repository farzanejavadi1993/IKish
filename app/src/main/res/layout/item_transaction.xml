<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="Transaction"
            type="ikish.aftab.ws.android.db.Transactions" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/back_to_back"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="73dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_transaction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/tarakonesh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_buy"
                style="@style/H7Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="خرید کد تخفیف"
                app:layout_constraintEnd_toStartOf="@+id/iv_transaction"
                app:layout_constraintTop_toTopOf="@+id/iv_transaction" />

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/tv_price_buy"
                style="@style/H5Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Transaction.PR}"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_transaction"
                app:layout_constraintEnd_toStartOf="@+id/iv_transaction" />

            <TextView
                android:id="@+id/tv_code_buy"
                style="@style/H7Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Transaction.CO}"

                android:layout_marginStart="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_transaction" />

            <TextView
                android:id="@+id/tv_date_buy"
                android:layout_marginStart="40dp"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="#474747"
                android:lineSpacingExtra="9sp"
                android:text="@{Transaction.DATE}"
                app:layout_constraintBottom_toBottomOf="@+id/iv_transaction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_code_buy" />

            <ImageView
                android:src="@drawable/ic_fi_rr_angle_small_left"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
