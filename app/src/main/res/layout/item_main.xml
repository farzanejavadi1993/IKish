<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    >
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="22dp"
        android:backgroundTint="@color/pale_gray"
        app:strokeColor="#e3e3e3"
        app:strokeWidth="1dp"
        android:layout_width="320dp"
        android:layout_height="186dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_air_plane"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:rotation="270"
                android:src="@drawable/ic_flight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="71dp"
                android:layout_height="1dp"
                android:layout_marginStart="6dp"
                android:background="#c4c4c4"
                app:layout_constraintBottom_toBottomOf="@+id/iv_air_plane"
                app:layout_constraintStart_toEndOf="@+id/iv_air_plane"
                app:layout_constraintTop_toTopOf="@+id/iv_air_plane" />

            <View
                android:id="@+id/view2"
                android:layout_width="71dp"
                android:layout_height="1dp"
                android:layout_marginEnd="6dp"
                android:background="#c4c4c4"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/iv_air_plane"
                app:layout_constraintEnd_toStartOf="@+id/iv_air_plane"
                app:layout_constraintTop_toTopOf="@+id/iv_air_plane" />

            <View
                android:id="@+id/tv_time_origin"
                android:layout_width="39dp"
                android:layout_height="13dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_air_plane"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_air_plane"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />




            <View
                android:id="@+id/tv_time_destination"
                android:layout_width="39dp"
                android:layout_height="13dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_air_plane"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_air_plane"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />



            <View
                android:id="@+id/tv_name_orogin"
                android:layout_width="51dp"
                android:layout_height="13dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_origin"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />



            <View
                android:id="@+id/tv_name_destination"
                style="@style/H6Right"
                android:layout_width="51dp"
                android:layout_height="13dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_destination"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />




            <View
                android:id="@+id/tv_time_flight"
                android:layout_width="78dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_air_plane"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />



            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_company_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_orogin" />

            <View
                android:id="@+id/tv_name_flight_company"
                android:layout_width="133dp"
                android:layout_height="13dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_company_icon"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_orogin"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />



            <View
                android:id="@+id/tv_number_flight"
                android:layout_width="67dp"
                android:layout_height="13dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_company_icon"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_flight_company"
                android:alpha="0.1"
                android:background="@android:color/background_dark" />


            <View

                android:id="@+id/tv_price_flight"
                style="@style/H4Left"
                android:layout_width="108dp"
                android:layout_height="13dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_company_icon" />


            <View

                android:id="@+id/btn_type"
                android:layout_width="64dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_company_icon" />


            <View
                android:id="@+id/tv_remain_passenger"
                android:layout_width="39dp"
                android:layout_height="13dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="27dp"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                app:layout_constraintBottom_toBottomOf="@+id/btn_type"
                app:layout_constraintStart_toEndOf="@+id/btn_type"
                app:layout_constraintTop_toBottomOf="@+id/iv_company_icon" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>




