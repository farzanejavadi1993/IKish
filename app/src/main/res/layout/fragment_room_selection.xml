<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/pale_gray"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">




            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginEnd="@dimen/margin_normal"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/H4Left"
            android:id="@+id/tv_nees_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:text="@string/need_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />





        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_amount_rooms"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nees_room" >

            <TextView
                android:id="@+id/tv_amount_rooms"
                style="@style/H5Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_room"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




            <RelativeLayout
                android:background="@drawable/max_min_layout_background"
                android:layout_width="106dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="6dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_min_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_count_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    />

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_plus"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_max_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/H4Left"
            android:id="@+id/tv_determination_amount_Guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:text="@string/determination_amount_Guest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_amount_rooms" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_old_room"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_determination_amount_Guest" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_old_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_older_than12_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/older_than_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <RelativeLayout
                android:background="@drawable/max_min_layout_background"
                android:layout_width="106dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="6dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_min_old_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_count_old_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_plus"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_max_old_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    tools:ignore="DuplicateIds" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:id="@+id/layout_young_room"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_old_room" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_young_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/young"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_between2_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/between2_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <RelativeLayout
                android:background="@drawable/max_min_layout_background"
                android:layout_width="106dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="6dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_min_young_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_count_young_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    />

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_plus"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_max_young_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:id="@+id/layout_baby"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_young_room" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_baby_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baby"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_yonger_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/younger_than"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



            <RelativeLayout
                android:background="@drawable/max_min_layout_background"
                android:layout_width="106dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_minus"
                    android:layout_marginLeft="6dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_min_baby_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_count_baby_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    />

                <ImageView
                    android:id="@+id/iv_max_baby_room"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_plus" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_find_place"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#c4c4c4"
            android:fontFamily="@font/iransans"
            android:text="@string/find_place"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
