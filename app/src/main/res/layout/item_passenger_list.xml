<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="passenger"
            type="ikish.aftab.ws.android.db.Passenger" />
    </data>





        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/checkbox"
            android:id="@+id/card_passenger"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_passenger_height"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            app:cardBackgroundColor="@color/pale_gray"
            app:cardCornerRadius="12dp"
            app:strokeColor="#e3e3e3"
            android:elevation="4dp"
            app:strokeWidth="1dp"
            android:background="@drawable/item_passenger_radus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="-12dp"
                    android:orientation="vertical"
                    android:id="@+id/layout_check"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkbox"
                       android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/layout_check"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_name"
                        android:layout_width="@dimen/item_passenger_iv_size"
                        android:layout_height="@dimen/item_passenger_iv_size"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_user"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/tv_name"
                        style="@style/H5Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@{passenger.CN}"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_name"
                        app:layout_constraintEnd_toStartOf="@+id/iv_name"
                        app:layout_constraintTop_toTopOf="@+id/iv_name" />

                    <ImageView
                        android:id="@+id/iv_id_card"
                        android:layout_width="@dimen/item_passenger_iv_size"
                        android:layout_height="@dimen/item_passenger_iv_size"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_id_card"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_name" />


                    <TextView

                        android:id="@+id/tv_id_card"
                        style="@style/H5Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@{passenger.IDC}"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_id_card"
                        app:layout_constraintEnd_toStartOf="@+id/iv_id_card"
                        app:layout_constraintTop_toTopOf="@+id/iv_id_card" />

                    <ImageView
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:id="@+id/iv_menu"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_menu"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility="gone"
                        style="@style/H8Left"
                        android:background="@drawable/item_passenger_radus"
                        android:gravity="center"
                        android:id="@+id/tv_age"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="11dp"
                        android:text="بزگسال"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_menu" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>

</layout>
