<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="MyReserveResidence"
            type="ikish.aftab.ws.android.db.ReserveResidence" />
    </data>
    <com.google.android.material.card.MaterialCardView

        android:backgroundTint="@color/pale_gray"
        app:cardCornerRadius="12dp"
        app:strokeColor="#e3e3e3"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_height="132dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/profile_iv_user"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/profileimage"
                app:civ_border_color="#eee"
                app:civ_border_width="1dp"
                app:civ_shadow_radius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_reserve"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/rent_aparteman"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_iv_user" />

            <TextView
                android:text="@{MyReserveResidence.name}"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#474747"
                android:lineSpacingExtra="10sp"
                android:gravity="right"
                android:id="@+id/tv_name_my_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="9dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_reserve"
                app:layout_constraintTop_toBottomOf="@+id/profile_iv_user" />

            <ImageView
                android:src="@drawable/ic_calendar"
                android:id="@+id/iv_date"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_reserve" />

            <TextView
                android:id="@+id/tv_date_my_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:gravity="end"
                android:lineSpacingExtra="10sp"

                android:text="@{MyReserveResidence.DATE}"
                android:textColor="#474747"
                android:textSize="12sp"
                android:textStyle="normal"

                app:layout_constraintEnd_toStartOf="@+id/iv_date"
                app:layout_constraintTop_toTopOf="@+id/iv_date" />

            <TextView

                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#474747"
                android:lineSpacingExtra="9sp"
                android:gravity="end"
                android:text="علی علوی"


                android:id="@+id/tv_name_passenger_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"

                app:layout_constraintEnd_toStartOf="@+id/profile_iv_user"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_fi_rr_angle_small_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>