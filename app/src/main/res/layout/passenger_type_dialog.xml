<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="14dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="@color/pale_gray"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_dialog"
            android:layout_width="0dp"

            android:layout_height="@dimen/toolbar_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                style="@style/H4Left"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passenger_type_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_close_dialog"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginEnd="22dp"

                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_old"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_dialog" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_older_than12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/older_than_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                 >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_room"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_room"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:id="@+id/layout_young"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_old" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_young"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/young"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_between2_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/between2_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_young"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_young"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_young"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="4dp"
            android:id="@+id/layout_baby"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_young" >

            <TextView
                android:layout_marginTop="5dp"
                style="@style/H5Right"
                android:id="@+id/tv_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baby"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/H8Left"
                android:id="@+id/tv_yonger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/younger_than"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_baby"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_baby"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="10dp"


            android:backgroundTint="#c4c4c4"

            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:fontFamily="@font/iransans"
            android:textSize="14sp"
            android:textColor="@color/white"

            android:layout_height="50dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="22dp"
            android:text="تایید"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_baby" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ok" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>