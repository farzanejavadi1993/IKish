<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/pale_gray"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">




                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_back"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#474747"
                android:lineSpacingExtra="16sp"
                android:gravity="end"
                android:text="تعداد میهمانان را مشخص کنید."
                android:id="@+id/tv_nees_room"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"

                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="14dp"
                android:id="@+id/layout_amount_bed"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nees_room" >

                <TextView

                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="ظرفیت میهمان"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="10sp"
                    android:gravity="end"
                    android:text="بر اساس تعداد تخت‌ها"
                    android:id="@+id/tv_base_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_passenger"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />
                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        tools:ignore="DuplicateIds" />
                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_passenger"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_extra_passenger"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_amount_bed" >

                <TextView

                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد میهمانان اضافه"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_amount_extra_passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="10sp"
                    android:gravity="end"
                    android:text="بر اساس تعداد رخت خواب‌های سنتی"
                    android:id="@+id/tv_base_old_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_extra_passenger"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_extra_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        tools:ignore="DuplicateIds" />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_extra_passenger"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#474747"
                android:lineSpacingExtra="16sp"
                android:gravity="end"
                android:text="اقامتگاه چه امکاناتی برای خواب میهمانان دارد؟"
                android:id="@+id/tv_determination_amount_Guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_extra_passenger" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="14dp"
                android:id="@+id/layout_amount_rooms"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_determination_amount_Guest" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد اتاق‌ها"
                    android:id="@+id/tv_amount_rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_room"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_room"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_amount_bed1"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_amount_rooms" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد تخت‌های ۱ نفره"
                    android:id="@+id/tv_amount_bed1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_bed1"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_bed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_bed1"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_amount_bed2"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_amount_bed1" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد تخت‌های ۲ نفره"
                    android:id="@+id/tv_amount_bed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_bed2"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_bed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_bed2"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                android:id="@+id/layout_amount_old_bed"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_amount_bed2" >

                <TextView
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#474747"
                    android:lineSpacingExtra="9sp"
                    android:gravity="end"
                    android:text="تعداد رخت خواب‌های سنتی"
                    android:id="@+id/tv_amount_old_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




                <RelativeLayout
                    android:background="@drawable/max_min_layout_background"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_minus"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/iv_min_old_bed"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_count_old_bed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_plus"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_max_old_bed"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:id="@+id/card_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/card_radius_bottom"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_possibility"
                android:layout_centerVertical="true"
                android:layout_width="132dp"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:backgroundTint="@color/very_light_pink"
                android:fontFamily="@font/iransans"
                android:lineSpacingExtra="10sp"
                android:text="@string/continue_add_residence"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold"

                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </RelativeLayout>

</layout>