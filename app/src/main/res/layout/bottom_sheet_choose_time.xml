<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_dialog"
        android:layout_width="match_parent"

        android:layout_height="@dimen/toolbar_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:fontFamily="@font/iransans"
            android:id="@+id/tv_titlee"
            style="@style/H4Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:text="ساعت ورود (Check in)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_close_dialog"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginEnd="22dp"

            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ikish.aftab.ws.android.classes.PersianDatePicker
        android:layout_width="match_parent"
        android:id="@+id/persian_date_calendar_rule"
        app:displayMonthNames="true"
        android:layout_height="match_parent" />

    <com.google.android.material.button.MaterialButton
        android:fontFamily="@font/iransans"
        app:iconGravity="textEnd"

        app:cornerRadius="10dp"
        android:backgroundTint="@color/topaz"
        android:id="@+id/btn_add_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="ادامه"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/margin_normal"

        >


