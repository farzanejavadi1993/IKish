<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="detailFlight"
            type="ikish.aftab.ws.android.db.DetailFlight" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_"
            android:layout_width="0dp"
            android:layout_height="114dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/pale_gray"
            app:cardCornerRadius="10dp"
            app:strokeColor="#e3e3e3"
            app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="@drawable/background_plane"
                    android:id="@+id/palne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >
                    <ImageView

                        android:src="@drawable/ic_planee"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"/>
                </RelativeLayout>

                <TextView
                    style="@style/H4Left"
                    android:id="@+id/tv_name_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="12dp"
                    android:text="@{detailFlight.OTD}"
                    app:layout_constraintEnd_toStartOf="@+id/palne"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_order_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    style="@style/H7Right"
                   android:text="@{detailFlight.ONN}"
                    app:layout_constraintEnd_toStartOf="@+id/palne"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_travel" />

                <ImageView
                    android:id="@+id/iv_back_item"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="17dp"
                    android:src="@drawable/ic_arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/palne"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/palne" />

                <ImageView
                    android:id="@+id/iv_calendar_item"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/palne" />

                <TextView
                    android:id="@+id/tv_date_item"

                    style="@style/H5Right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_calendar_item"

                    app:layout_constraintEnd_toStartOf="@+id/iv_calendar_item"
                   android:text="@{detailFlight.DATE}" />

                <View
                    android:id="@+id/button15"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#e3e3e3"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_calendar_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_calendar_item" />

                <ImageView
                    android:id="@+id/iv_user_item"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_user"
                    app:layout_constraintBottom_toBottomOf="@+id/button15"
                    app:layout_constraintEnd_toStartOf="@+id/button15"
                    app:layout_constraintTop_toTopOf="@+id/button15" />

                <TextView
                    android:id="@+id/tv_number_passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    style="@style/H6Right"

                    android:text="@{detailFlight.MEM}"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_user_item"
                    app:layout_constraintEnd_toStartOf="@+id/iv_user_item"
                    app:layout_constraintTop_toTopOf="@+id/iv_user_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
