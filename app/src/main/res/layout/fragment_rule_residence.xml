<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/pale_gray"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">




                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_back"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginTop="14dp"
                       android:id="@+id/tv_title_least_time_rent"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginEnd="22dp"
                       android:gravity="right"
                       android:lineSpacingExtra="16sp"
                       android:text="@string/title_least_time_rent_residence"
                       android:textColor="#474747"
                       android:textSize="11sp"

                       android:textStyle="bold"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/layout_time"
                       android:layout_width="match_parent"
                       android:layout_height="56dp"
                       android:layout_marginStart="22dp"
                       android:layout_marginTop="14dp"
                       android:layout_marginEnd="22dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/tv_toilet_residence">

                       <TextView

                           android:id="@+id/tv_least_time_rent"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:gravity="end"
                           android:lineSpacingExtra="9sp"
                           android:text="@string/least_time_rent_residence"
                           android:textColor="#474747"
                           android:textSize="13sp"
                           android:textStyle="normal"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <TextView

                           android:id="@+id/tv_base_night"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="5dp"
                           android:gravity="end"
                           android:lineSpacingExtra="10sp"
                           android:text="بر اساس شب"
                           android:textColor="#474747"
                           android:textSize="10sp"
                           android:textStyle="normal"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent" />


                       <RelativeLayout
                           android:layout_width="106dp"
                           android:layout_height="30dp"
                           android:background="@drawable/max_min_layout_background"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent">

                           <ImageView
                               android:id="@+id/iv_min_time"
                               android:layout_width="17dp"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_marginLeft="6dp"
                               android:background="?attr/selectableItemBackgroundBorderless"
                               android:clickable="true"
                               android:focusable="true"
                               android:src="@drawable/ic_minus"
                               tools:ignore="DuplicateIds" />

                           <TextView
                               android:id="@+id/tv_count_time"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:text="0"
                               tools:ignore="DuplicateIds" />

                           <ImageView
                               android:id="@+id/iv_max_time"
                               android:layout_width="17dp"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="6dp"
                               android:background="?attr/selectableItemBackgroundBorderless"
                               android:clickable="true"
                               android:focusable="true"
                               android:src="@drawable/ic_plus"
                               tools:ignore="DuplicateIds" />
                       </RelativeLayout>

                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView

                       android:id="@+id/tv_title_rule"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="30dp"
                       android:layout_marginEnd="22dp"
                       android:gravity="right"
                       android:lineSpacingExtra="16sp"
                       android:text="@string/title_rule_residence"
                       android:textColor="#474747"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/layout_time" />


                       <RelativeLayout
                           android:layout_marginLeft="22dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"

                           android:layout_marginBottom="4dp">


                           <TextView
                               android:layout_centerVertical="true"
                               android:id="@+id/rule1"
                               style="@style/H6Right"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:text="@string/rule1_residence" />

                           <CheckBox
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_centerVertical="true" />

                       </RelativeLayout>

                       <RelativeLayout
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginBottom="4dp">

                           <TextView
                               android:id="@+id/rule2"
                               style="@style/H6Right"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:layout_centerVertical="true"
                               android:text="@string/rule2_residence" />


                           <CheckBox
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_centerVertical="true" />
                       </RelativeLayout>

                       <RelativeLayout
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginBottom="4dp">

                           <TextView
                               android:id="@+id/rule3"
                               style="@style/H6Right"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:layout_centerVertical="true"
                               android:text="@string/rule3_residence" />


                           <CheckBox
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_centerVertical="true" />
                       </RelativeLayout>

                       <RelativeLayout
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginBottom="4dp">

                           <TextView
                               android:id="@+id/rule4"
                               style="@style/H6Right"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"

                               android:layout_centerVertical="true"
                               android:text="@string/rule4_residence" />


                           <CheckBox
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentLeft="true"
                               android:layout_centerVertical="true" />
                       </RelativeLayout>

                       <TextView
                           android:id="@+id/tv_title_time_delivery"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="30dp"
                           android:gravity="right"
                           android:lineSpacingExtra="16sp"
                           android:text="@string/title_time_delivery_residence"
                           android:textColor="#474747"
                           android:textSize="14sp"
                           android:textStyle="bold"

                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toBottomOf="@+id/layout_time" />

                       <TextView
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:id="@+id/tv_title_delivery"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="14dp"
                           android:gravity="right"
                           android:lineSpacingExtra="9sp"
                           android:text="@string/title_delivery_residence"
                           android:textColor="#474747"
                           android:textSize="11sp"
                           android:textStyle="normal" />

                       <com.google.android.material.card.MaterialCardView
                          android:id="@+id/btnDelivery"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="48dp"
                           android:layout_marginTop="5dp"
                           android:backgroundTint="#e6e5ee"
                           app:cardCornerRadius="10dp"
                           app:strokeColor="#dfdfdf"
                           app:strokeWidth="1dp">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <TextView
                                   android:id="@+id/tvDelivery"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginRight="16dp"
                                   android:gravity="end"
                                   android:lineSpacingExtra="9sp"
                                   android:text="انتخاب کنید‌"
                                   android:textColor="#8a8a8a"
                                   android:textSize="13sp"
                                   android:textStyle="normal" />

                               <ImageView
                                   android:layout_width="12dp"
                                   android:layout_height="12dp"
                                   android:layout_alignParentLeft="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginLeft="16dp"
                                   android:rotation="270"
                                   android:src="@drawable/ic_fi_rr_angle_small_left" />
                           </RelativeLayout>

                       </com.google.android.material.card.MaterialCardView>

                       <TextView
                           android:id="@+id/tv_description_delivery"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:gravity="right"
                           android:lineSpacingExtra="10sp"
                           android:text="@string/description_delivery_residence"
                           android:textColor="#8a8a8a"
                           android:textSize="12sp"
                           android:textStyle="normal" />

                       <TextView
                           android:id="@+id/title_hand_over"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/mapbox_internalMinSpan24"
                           android:gravity="right"
                           android:lineSpacingExtra="9sp"
                           android:text="@string/title_hand_over_residence"
                           android:textColor="#474747"
                           android:textSize="11sp"
                           android:textStyle="normal" />
                       <com.google.android.material.card.MaterialCardView

                           android:id="@+id/btnHandOver"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="48dp"
                           android:layout_marginTop="5dp"
                           android:backgroundTint="#e6e5ee"
                           app:cardCornerRadius="10dp"
                           app:strokeColor="#dfdfdf"
                           app:strokeWidth="1dp">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <TextView
                                   android:id="@+id/tvHandOver"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginRight="16dp"
                                   android:gravity="end"
                                   android:lineSpacingExtra="9sp"
                                   android:text="انتخاب کنید‌"
                                   android:textColor="#8a8a8a"
                                   android:textSize="13sp"
                                   android:textStyle="normal" />

                               <ImageView
                                   android:layout_width="12dp"
                                   android:layout_height="12dp"
                                   android:layout_alignParentLeft="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginLeft="16dp"
                                   android:rotation="270"
                                   android:src="@drawable/ic_fi_rr_angle_small_left" />
                           </RelativeLayout>

                       </com.google.android.material.card.MaterialCardView>
                       <TextView
                           android:id="@+id/tv_description_hand_over"
                           android:layout_marginBottom="74dp"
                           android:layout_marginLeft="22dp"
                           android:layout_marginRight="22dp"
                           android:layout_marginTop="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="normal"
                           android:textSize="12sp"
                           android:textColor="#8a8a8a"
                           android:lineSpacingExtra="10sp"
                           android:gravity="right"
                           android:text="@string/description_hand_over_residence"
                           />

               </LinearLayout>



            </androidx.core.widget.NestedScrollView>





        </LinearLayout>
        <RelativeLayout
            android:id="@+id/card_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/card_radius_bottom"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue_rule"
                android:layout_width="132dp"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:backgroundTint="@color/topaz"
                android:fontFamily="@font/iransans"
                android:lineSpacingExtra="10sp"
                android:text="@string/continue_add_residence"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold"

                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>


    </RelativeLayout>

</layout>
