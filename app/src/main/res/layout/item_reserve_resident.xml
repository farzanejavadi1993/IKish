<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="ReserveResidence"
            type="ikish.aftab.ws.android.db.ReserveResidence" />
    </data>
    <com.google.android.material.card.MaterialCardView

        android:backgroundTint="@color/pale_gray"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/topaz"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_height="86dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            tools:ignore="MissingConstraints">
            <com.github.siyamed.shapeimageview.RoundedImageView
                app:siRadius="8dp"
                android:id="@+id/iv_reserve"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="7dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                style="@style/H5Right"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:text="@{ReserveResidence.name}"
                app:layout_constraintEnd_toStartOf="@+id/iv_reserve"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toStartOf="@+id/iv_reserve"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView

                style="@style/H7Right"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@{ReserveResidence.DATE}"
                app:layout_constraintBottom_toBottomOf="@+id/iv_calendar"
                app:layout_constraintEnd_toStartOf="@+id/iv_calendar"
                app:layout_constraintTop_toTopOf="@+id/iv_calendar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
